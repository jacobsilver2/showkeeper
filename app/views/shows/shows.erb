
<h2> Shows at <%= current_user.venue%> </h2>
<% unless locals.empty? %>
  <h4><%= message %></h4>
<% end %>

<% @shows.each do |show| %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8"><strong><%= show.date %></strong></div>
      <div class="col-md-4"><strong><%= show.doors_at %></strong></div>
    </div>
    <div class="row">
      <div class="col-md-12"><p><strong><a href="<%=show.headliner_url%>"><%= show.headliner %></a></p></strong></div>
    </div>
    <div class="row">
      <div class="col-md-12">with special guests: <%= show.support %></div>
    </div>
    <div class="row">
    <div class="col-md-12"><%= show.blurb %></p></div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <form action="/shows/<%=show.id%>/edit">
          <input class="btn btn-primary btn-xs" type="submit" value="Edit Show" />
        </form>
      </div>
      <br>
      <div class="col-md-6">
        <form method="post" action="/shows/<%=show.id%>/delete">
          <input id="hidden" type="hidden" name="_method" value="DELETE">
          <input class="btn btn-primary btn-xs" type="submit" value="Delete Show">
        </form>
      </div>
    </div>
  </div>
  <br>
<% end %>