<!doctype html>
<html>
  <head>
    <title>Showkeeper</title>
    <link rel="stylesheet" type="text/css" href="../../public/stylesheets/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

  </head>
  <body>
    <nav>
      <% if logged_in? %>
        
        <p>Welcome, <%=current_user.username %> (<%=current_user.venue %>)</p>
        <h4><a href="/shows/new"> Add Show </a></h4>
        <h5><a href="/logout"> Log Out </a></h5>
        <p><a href="/shows"> View all shows at <%=current_user.venue %></a></p>

      <% else %>
        <a href="/signup">Sign Up</a>
        <a href="/login"> Sign In </a>
      <%end %>

    </nav>




    <div class="container">
      <%= yield %> 
    </div>
  </body>
</html>