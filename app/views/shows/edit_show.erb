<h2> Edit Tweet </h2>

<form method="post" action="/shows/<%=@show.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="date" value="<%= @show.date %>">
  <input type="text" name="headliner" value="<%= @show.headliner %>">
  <input type="text" name="support" value="<%= @show.support %>">
  <input type="text" name="blurb" value="<%= @show.blurb %>">
  <input type="text" name="headliner_url" value="<%= @show.headliner_url %>">
  <input type="text" name="doors_at" value="<%= @show.doors_at %>">
  <input type="submit" value="submit">
</form>
